
<div class="card card-format">
  <div class='row'>
    <div class='col s12'>
        <%= form_for(@emp, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                <%= f.label :name %>
                </div>
                <div class="col-sm-8">
                <%= f.text_field :emp_name, class: "form-control", placeholder: "Enter username", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                <%= f.label :designation %>
                </div>
                <div class="col-sm-8">
                <%= f.text_field :dsg, class: "form-control", placeholder: "Enter email" %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                <%= f.label :salary %>
                </div>
                <div class="col-sm-8">  
                <%= f.text_field :sal, class: "form-control", placeholder: "Enter password" %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="control-label col-sm-2">
                <%= f.label :location %>
                </div>
                <div class="col-sm-8">
                <%= f.text_field :loc, class: "form-control", placeholder: "Enter password" %>
                </div>
            </div>
            <br/>
            <div class="waves-effect waves-light btn">
                <%= link_to "Update", update_path(@emp) %> 
            </div>
        <% end %>
        
    </div>
</div>
</div>